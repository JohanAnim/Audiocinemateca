<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_player_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#CC000000"
    android:padding="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/mini_player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Contenido"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/mini_player_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtítulo (Temporada X, Episodio Y)"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <Button
        android:id="@+id/mini_player_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause" />

    <Button
        android:id="@+id/mini_player_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar" />

</LinearLayout>