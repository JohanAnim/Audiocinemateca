<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/catalogFragment">

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.johang.audiocinemateca.presentation.catalog.CatalogFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_catalogFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/downloadsFragment"
        android:name="com.johang.audiocinemateca.presentation.downloads.DownloadsFragment"
        android:label="DownloadsFragment" />

    <fragment
        android:id="@+id/myListsFragment"
        android:name="com.johang.audiocinemateca.presentation.mylists.MyListsFragment"
        android:label="MyListsFragment" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.johang.audiocinemateca.presentation.account.AccountFragment"
        android:label="AccountFragment" >
        <action
            android:id="@+id/action_accountFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_accountFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.johang.audiocinemateca.presentation.webview.WebViewFragment"
        android:label="WebViewFragment">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.johang.audiocinemateca.presentation.settings.SettingsFragment"
        android:label="Ajustes" />

    <fragment
        android:id="@+id/contentDetailFragment"
        android:name="com.johang.audiocinemateca.presentation.contentdetail.ContentDetailFragment"
        android:label="ContentDetailFragment">
        <argument
            android:name="itemId"
            app:argType="string" />
        <argument
            android:name="itemType"
            app:argType="string" />
        <action
            android:id="@+id/action_contentDetailFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_contentDetailFragment"
        app:destination="@id/contentDetailFragment" />

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.johang.audiocinemateca.presentation.player.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/fragment_player">
        <argument
            android:name="catalogItem"
            app:argType="com.johang.audiocinemateca.domain.model.CatalogItem" />
        <argument
            android:name="partIndex"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="episodeIndex"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <action
        android:id="@+id/action_global_playerFragment"
        app:destination="@id/playerFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.johang.audiocinemateca.presentation.search.SearchFragment"
        android:label="Buscar"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_contentDetailFragment"
            app:destination="@id/contentDetailFragment" />
    </fragment>

</navigation>